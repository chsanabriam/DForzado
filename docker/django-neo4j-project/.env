# Django
DEBUG=False
SECRET_KEY=change_this_to_a_secure_random_string
DJANGO_ALLOWED_HOSTS=localhost 127.0.0.1 [::1]

# Neo4j
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j*FGN
NEO4J_HOST=neo4j
NEO4J_PORT=7687
NEO4J_SCHEME=bolt

# ===================================
# NUEVAS VARIABLES PARA POSTGRESQL
# ===================================

# PostgreSQL (para embeddings y LLM)
POSTGRES_DB=django_neo4j_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# ===================================
# NUEVAS VARIABLES PARA LLM
# ===================================

# LLM Configuration
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-ada-002

# Vector Store
USE_VECTOR_STORE=True
VECTOR_STORE_TYPE=postgresql

# ===================================
# VARIABLES OPCIONALES (con defaults)
# ===================================

# Neo4j Memory (opcional - valores m√°s conservadores)
